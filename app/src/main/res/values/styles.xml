<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text styles -->
    <style name="text_menu">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Tab layout -->
    <style name="tab_layout_order" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    <!-- tool bar -->
    <style name="toolbar_primary" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="colorOnPrimary">@color/primary</item>
    </style>
    <!-- rating bar -->
    <style name="ratingBarCustom" parent="@style/Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar</item>
        <item name="minHeight">35dip</item>
        <item name="maxHeight">40dip</item>
    </style>
    <!-- Another styles -->
    <style name="rating_bar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/text_gray</item>
        <item name="colorControlActivated">@color/star</item>
    </style>
    <style name="button_enabled" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="button_disabled" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@color/background_gray</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

</resources>